<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="@dimen/card_elements_margins"
       >
        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cover_criminal"
            android:alpha="0.1"
            android:layout_alignTop="@+id/category"
            android:layout_alignBottom="@+id/date"
            android:scaleType="centerCrop"
             />
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:textAllCaps="true"
            tools:text="Drawing Awards" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/title"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:layout_marginTop="@dimen/card_elements_margins"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Tourist filmed sitting on 5m-long crocodile" />

        <TextView
            android:id="@+id/preview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/card_elements_margins"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image"
            android:maxLines="3"
            tools:text="It was dangerous, I know. It is a scary feeling sitting on something that could kill you in a fraction of a  second, he says."  />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preview_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/card_elements_margins"

            tools:text="@tools:sample/date/ddmmyy"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>